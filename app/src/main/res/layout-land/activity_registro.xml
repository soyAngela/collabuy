<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_quaternary"
    tools:context=".Registro">

    <TextView
        android:id="@+id/textRegistra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="139dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="353dp"
        android:text="@string/signUp_title"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/editRegisUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="@string/signUp_username"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/editRegisContrasena"
        app:layout_constraintEnd_toEndOf="@+id/editRegisContrasena"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editRegisContrasena"
        app:layout_constraintTop_toBottomOf="@+id/textRegistra"
        app:layout_constraintVertical_bias="0.5" />


    <EditText
        android:id="@+id/editRegisContrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="@string/signUp_password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/botonRegistrate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.274"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editRegisUsuario" />

    <Button
        android:id="@+id/botonRegistrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="373dp"
        android:layout_marginBottom="74dp"
        android:background="@color/green_main"
        android:text="@string/signUp_signUp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editRegisContrasena"  />

    <TextView
        android:id="@+id/textYaInicia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="159dp"
        android:text="@string/signUp_signIn"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editRegisContrasena"
        app:layout_constraintTop_toBottomOf="@+id/textYaTienesCuenta" />

    <TextView
        android:id="@+id/textYaTienesCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="9dp"
        android:text="@string/signUp_accountAlready"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textYaInicia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editRegisUsuario"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>